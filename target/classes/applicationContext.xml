<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- <bean/> definitions here -->


	<bean name="emp" class="kapil.com.entity.Employee">


		<property name="name" value="Kapil" />
		<property name="gender" value="Male" />
		<property name="id" value="1" />
		<property name="salary" value="5000" />
		<property name="address" ref="add" />


	</bean>

	<bean id="emp2" class="kapil.com.entity.Employee">
		<constructor-arg name="name" value="Nitesh"/>
		<constructor-arg name="gender" value="Male" />
		<constructor-arg name="id" value=" 2" />
		<constructor-arg name="salary" value="3000" />
		<constructor-arg name = "address" ref ="add" />
	</bean>








	<bean id="add" class="kapil.com.entity.Address">
		<property name="city" value="Noida"></property>
		<property name="state" value="UP"></property>
		<property name="hNo" value="520"></property>

	</bean>
	
	
	
	<bean name ="add2" class ="kapil.com.entity.Address" >
	
	<constructor-arg name = "city" value ="GZB" />	
	<constructor-arg name = "state" value ="Utter Pradesh" />
	<constructor-arg name ="hNo" value ="147" />
	

	
	</bean>
	
	
	<bean name ="emp3" class ="kapil.com.entity.Employee">
	<property name="name " value ="Sumit" />
	<property name="gender " value="Male" />
	<property name="id" value="1" />
	<property name="salary" value="9000" />
	<property name="address" ref="add2" />
	
	</bean>
	
</beans>








